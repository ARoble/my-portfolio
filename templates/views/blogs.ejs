    <!-- Normalize -->
    <link rel="stylesheet" href="/css/normalize.css" />

    <!-- Default -->
    <link rel="stylesheet" href="/css/default.css" />

    <!-- Style -->
    <link rel="stylesheet" href="/css/style.css" />

    <!-- Responsive -->
    <link rel="stylesheet" href="/css/responsive.css" />
  </head>

  <body>
    <div id="main-wrapper">
      <!-- header -->
      <%- include('../partials/sideNav.ejs') %>
      <!-- header -->
      <main>
        <!-- Blog Start -->
        <section class="blog">
          <div class="container">
            <div class="title">
              <h2>Blog</h2>
             
              <p class="des-text">
                I will be sharing my journey of coding in Somaliland! Will also
                be sharing my daugnting ðŸ’€ expeience of starting 4 start-ups in
                a not so technologically adavnced county. Think this would be an
                awesome means to share my journey!!ðŸ˜‡
              </p>
              <form class="form-inline" action="/blogs" method="get">
                <label class="sr-only" for="inlineFormInputName2">Name</label>
                <input
                  type="text"
                  class="form-control mb-2 mr-sm-2"
                  id="inlineFormInputName2"
                  name="search"
                />

                <button
                  style="
                    background-color: #6cc254;
                    border-color: white;
                    color: white;
                  "
                  type="submit"
                  class="btn btn-primary mb-2"
                >
                  Search
                </button>
              </form>
              <!-- <hr
                style="height: 2px; border: none; background-color: #6cc254"
              /> -->
            </div>
            <div class="row">
              <% blog.forEach((blog) => { %>
                
              <div class="col-md-6 col-lg-4 h-auto" style="margin-bottom:2%">
                <hr
                  style="height: 1px; border: none; background-color: #6cc254"
                />
                <span>
                  Category:
                  <a href="/blogs?search=<%= blog.category %>"><span style="color: green"><%= blog.category %></span></span
                ></a>

                <span style="float: right">
                  <i class="fas fa-table"></i>
                  <span style="color: green"
                    ><%= blog.createDate %></span
                  ></span
                >
                <br /><br />
                <a  class="blog-title"
                  href="blog/<%= blog.slug %>"
                  style="font-size: 55px; line-height: 0.9"
                  ><%= blog.en.title %></a
                >
                <!-- <p>
                      Mliquyam erat, sed diam voluptua. Lok vero eos et accusam
                      et justo duolores et ea rebum. Stet clita
                    </p> -->
                 
                
              </div>
              <% }) %>



            </div>
          </div>
        </section>
        <!-- Blog End -->
      </main>
    </div>
<style>
  .blog-title:hover{
    color:#6cc254
  }
</style>

    <!-- jQuery -->
    <script src="/js/vendor/jquery-3.5.1.min.js"></script>

