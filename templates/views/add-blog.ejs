  </head>

  <body>
    <div id="main-wrapper">
      <!-- header -->
      <%- include('../partials/sideNav.ejs') %>
      <!-- header -->
      <main>
        <!-- Banner Start -->
        <section class="banner">
          <div class="container">
            <div class="row">
              <div class="col-lg-10 mx-auto">
                <div class="card">
                  <div class="card-body">
                    <center><h2>Add new blog post</h2></center>
                    <form class="row g-3" action="add-blog" method="post">
                      <div class="col-md-6">
                        <label for="inputEmail4" class="form-label"
                          >Blog Title (English)</label
                        >
                        <input
                          type="text"
                          name="titleEn"
                          class="form-control"
                          id="inputEmail4"
                        />
                      </div>
                      <div class="col-md-6">
                        <label for="inputPassword4" class="form-label"
                          >Blog title (Somali)</label
                        >
                        <input
                          type="text"
                          name="titleSo"
                          class="form-control"
                          id="inputPassword4"
                        />
                      </div>
                      <div class="col-md-6">
                        <label for="inputPassword4" class="form-label"
                          >Category</label> of blog post</label
                        >
                        <input
                          type="text"
                          name="category"
                          class="form-control"
                          id="inputPassword4"
                        />
                      </div>
                      <div class="col-12">
                        <label for="inputAddress" class="form-label"
                          >Blog Content (English)</label
                        >
                        <textarea
                          name="contentEn"
                          class="form-control"
                          placeholder="Leave a comment here"
                          id="floatingTextarea2"
                          style="height: 100px"
                        ></textarea>
                      </div>

                      <div class="col-12">
                        <label for="inputAddress" class="form-label"
                          >Blog Content (Somali)</label
                        >
                        <textarea
                          name="contentSo"
                          class="form-control"
                          placeholder="Leave a comment here"
                          id="floatingTextarea2"
                          style="height: 100px"
                        ></textarea>
                      </div>

                      <div class="col-12">
                        <button type="submit" class="btn btn-primary">
                          Sign in
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
        <!-- Banner End -->
      </main>
    </div>

    <!-- jQuery -->
    <script src="js/vendor/jquery-3.5.1.min.js"></script>

    <!-- Bootstrap -->
    <script src="js/vendor/bootstrap.min.js"></script>

