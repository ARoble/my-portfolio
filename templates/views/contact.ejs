<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="author" content="Abdulladif Roble" />
    <meta
      name="keywords"
      content="Coder, Somaliland, abdulladif, roble, abdulladif roble, freelancer, roblecodes"
    />
    <meta name="description" content="Abdulladif Roble's Portfolio " />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <title>RobleCodes</title>

    <!-- Apple Favicon -->
    <link rel="apple-touch-icon" href="img/logo/favicon.png" />

    <!-- All Device Favicon -->
    <link rel="icon" href="img/logo/icon.png" />

    <!-- Bootstrap -->
    <link rel="stylesheet" href="css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="css/fontawesome.min.css" />

    <!-- Venobox -->
    <link rel="stylesheet" href="css/venobox.min.css" />

    <!-- Animate -->
    <link rel="stylesheet" href="css/animate.min.css" />

    <!-- Normalize -->
    <link rel="stylesheet" href="css/normalize.css" />

    <!-- Default -->
    <link rel="stylesheet" href="css/default.css" />

    <!-- Style -->
    <link rel="stylesheet" href="css/style.css" />

    <!-- Responsive -->
    <link rel="stylesheet" href="css/responsive.css" />
  </head>
  <body>
    <div id="main-wrapper">
      <!-- header -->
      <%- include('../partials/sideNav.ejs') %>
      <!-- header -->
      <main>
        <!-- Contact Start -->
        <section class="contact">
          <div class="container">
            <div class="title">
              <h2>Contact Me</h2>
              <p class="des-text">Contact me im a friendly guy</p>
              <% if(locals.contactMessage){ %>
              <div class="alert alert-primary" role="alert">
                <b>Thank you</b> for your message!
              </div>
              <% } %>
            </div>

            <div class="row">
              <div class="col-md-6 col-lg-4">
                <div class="card">
                  <div class="card-body">
                    <div class="contact-icon">
                      <i class="fas fa-phone-alt"></i>
                    </div>
                    <h5>Phone: <span>063 362 8935</span></h5>
                    <p>ü§ôüèæ</p>
                  </div>
                </div>
              </div>
              <div class="col-md-6 col-lg-4">
                <div class="card">
                  <div class="card-body">
                    <div class="contact-icon">
                      <i class="fas fa-envelope"></i>
                    </div>
                    <h5>Mail: <span>hi@robleyare.com</span></h5>
                    <p>Shoot me an email!</p>
                  </div>
                </div>
              </div>
              <div class="col-lg-4">
                <div class="card">
                  <div class="card-body">
                    <div class="contact-icon">
                      <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <h5>Location: <span>Hargeisa</span></h5>
                    <p>The motherland</p>
                  </div>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="sub-title">
                  <h4>Contact Me</h4>
                </div>
              </div>
              <div class="col-md-6 col-lg-4">
                <div class="contact-map">
                  <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1826.6838651648823!2d90.45649702155303!3d23.69855871437011!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3755b767a022cd4b%3A0xaf33907e219d127!2sRayerbag%2C%20Dhaka!5e0!3m2!1sen!2sbd!4v1591172693035!5m2!1sen!2sbd"
                    style="border: 0"
                    allowfullscreen=""
                    aria-hidden="false"
                    tabindex="0"
                  ></iframe>
                </div>
              </div>
              <div class="col-md-6 col-lg-8">
                <form action="/contact" method="POST">
                  <div class="row">
                    <div class="col-lg-6">
                      <input
                        type="text"
                        name="name"
                        placeholder="Your Full-Name"
                        data-error="Name is required."
                        required="required"
                      />
                      <input
                        type="email"
                        name="email"
                        placeholder="Mail Address"
                        data-error="Valid email is required."
                        required="required"
                      />
                      <input
                        type="text"
                        name="website"
                        placeholder="Website / Phone (Optional)"
                      />
                    </div>
                    <div class="col-lg-6">
                      <textarea
                        name="message"
                        placeholder="Type Message..."
                        data-error="Please,leave us a message."
                        required="required"
                      ></textarea>
                      <button class="btn-anime" type="submit">
                        Submit Message
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </section>
        <!-- Contact End -->
      </main>
    </div>

    <!-- jQuery -->
    <script src="js/vendor/jquery-3.5.1.min.js"></script>

    <!-- Bootstrap -->
    <script src="js/vendor/bootstrap.min.js"></script>

    <!-- Popper -->
    <script src="js/vendor/popper.min.js"></script>

    <!-- Nice Scroll -->
    <script src="js/vendor/nicescroll.min.js"></script>

    <!-- Images Loaded -->
    <script src="js/vendor/imagesloaded.min.js"></script>

    <!-- Isotope -->
    <script src="js/vendor/isotope.min.js"></script>

    <!-- Venobox -->
    <script src="js/vendor/venobox.min.js"></script>

    <!-- Wow -->
    <script src="js/vendor/wow.min.js"></script>

    <!-- Retina -->
    <script src="js/vendor/retina.min.js"></script>

    <!-- Waypoints -->
    <script src="js/vendor/waypoints.min.js"></script>

    <!-- Counter Up -->
    <script src="js/vendor/counterup.min.js"></script>

    <!-- Index -->
    <script src="js/index.js"></script>
  </body>
</html>
