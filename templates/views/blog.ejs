  <body>
    <div id="main-wrapper">
      <!-- header -->
      <%- include('../partials/sideNav.ejs') %>
      <!-- header -->
      <main>
        <!-- Blog Start -->
        <section class="blog">
          <div class="container">
            <div class="row">
              <div class="col-md-8">
                <div class="title">
                  <h2><%= blog.title %></h2>

                  <% if(lang === 'so') { %>
                  <a href="/blog/<%= blog.slug %>" style="color: green"
                    >Read in English</a
                  >
                  <% }else{ %>
                  <a href="/blog/<%= blog.slug %>?lang=so" style="color: green"
                    >Ku Akhri Af-Somali</a
                  >
                  <% } %> <% if (session) { %>
                  <button
                    onclick="window.location.href='/edit-blog/<%= blog.slug %>'"
                    type="submit"
                    class="btn btn-primary btn-sm"
                  >
                    Edit Blog
                  </button>
                  <form
                    action="/delete-blog/<%= blog.id %>?_method=DELETE"
                    method="POST"
                    class="d-inline"
                  >
                    <button type="submit" class="btn btn-danger btn-sm">
                      Delete Blog
                    </button>
                  </form>

                  <% } %>
                </div>

                <div style="margin-top: 7%">
                  <p class="des-text"><%- blog.content %></p>
                </div>
                <!-- add blog content here you kno-->
              </div>
              <!-- add whole next secions here-->

              <div class="col-md-3">
                <!-- Add socials shit here -->
                <div style="padding-bottom: 10%">
                  <h3>
                    Connect with me! please üòî<b style="font-size: 10px"
                      >(Im not desperate üôÉ)</b
                    >
                  </h3>
                  <div class="row" style="margin-top: 14px">
                    <div class="col-sm">
                      <a href="https://twitter.com/roble_0042" target="_blank">
                        <img src="/img/blog/twitter.png" alt="Twitter " />
                      </a>
                    </div>
                    <div class="col-sm">
                      <a
                        href="https://www.linkedin.com/in/abdulladif-roble-892681118/"
                        target="_blank"
                      >
                        <img src="/img/blog/linkedin.png" alt="linkedin " />
                      </a>
                    </div>
                    <div class="col-sm">
                      <a href="https://github.com/ARoble" target="_blank">
                        <img src="/img/blog/github.png" alt="Github " />
                      </a>
                    </div>
                    <div class="col-sm">
                      <img src="/img/blog/instagram.png" alt="instagram " />
                    </div>
                  </div>
                </div>
                <div style="padding-bottom: 10%">
                  <h3>Blog Categories ‚úçüèæ</h3>
                  <br />
                  <% for(var i=0; i < category.length; i++) { %>
                  <a
                    href="/blogs?search=<%= category[i] %>"
                    style="color: green; font-size: 18px"
                    ><%= category[i] %> </a
                  ><br />

                  <% } %>
                </div>

                <div style="padding-bottom: 10%">
                  <h3>Similar Posts üôÉ</h3>
                  <%= similar.length %>
                  <br />
                  <% for(var i=0; i < similar.length; i++) { %>
                  <a
                    href="/blog/<%= similar[i].slug %>"
                    style="color: green; font-size: 18px"
                  >
                    <%= similar[i].en.title %>
                  </a>
                  <% if(similar.length >= 0 ){ %> Sorry no similar blog posts üòî
                  <% }else{ %> yes <% } %>
                  <br />
                  <% } %>
                </div>
              </div>
            </div>

            <!-- <hr
                style="height: 2px; border: none; background-color: #6cc254"
              /> -->
            <div class="row" style="padding-top: 60px"></div>
          </div>
        </section>
        <!-- Blog End -->
      </main>
    </div>

    <!-- jQuery -->
    <script src="/js/vendor/jquery-3.5.1.min.js"></script>

